{
    "extends": [
        "tslint-eslint-rules"
    ],
    "rules": {
        "class-name": true,
        "curly": true,
        "eofline": false,
        "file-header": [
            true,
            "Distributed under the MIT License"
        ],
        "forin": true,
        "label-position": true,
        "max-file-line-count": [
            true,
            1337
        ],
        "max-line-length": [
            true,
            140
        ],
        "no-arg": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,

        "no-empty": false,
        "no-eval": true,
        "no-irregular-whitespace": true,
        "no-string-literal": false,
        "no-trailing-whitespace": true,
        "no-unused-expression": true,
        "no-var-keyword": true,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "one-variable-per-declaration": [
            true,
            "ignore-for-loop"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "radix": true,
        "semicolon": true,
        "ter-indent": [
            true,
            4
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typeof-compare": true,
        "use-isnan": true,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator"
        ]
    }
}